{% schema %}
  {
    "name": "Header",
    "class": "top-0 bg-white w-full",
    "settings": [
      {
        "type": "range",
        "id": "announcement_autoplay",
        "min": 500,
        "max": 9000,
        "step": 500,
        "unit": "ms",
        "label": "Announcement auto-play (milliseconds)",
        "default": 3000
      }
    ],
    "blocks": [
      {
        "name": "Announcement",
        "type": "announcement",
        "settings": [
          {
            "type": "html",
            "id": "announcement",
            "label": "Announcement"
          },
          {
            "type": "select",
            "id": "locale",
            "label": "Locale",
            "options": [
              {
                "value": "international",
                "label": "International"
              },
              {
                "value": "us",
                "label": "US Only"
              },
              {
                "value": "all",
                "label": "All Countries"
              }
            ],
            "default": "us"
          }
        ]
      }
    ]
  }
{% endschema %}