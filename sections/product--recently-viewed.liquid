<recently-viewed class="recently-viewed hidden px-16 mb-40" data-handle="{{product.handle}}">
  <h1 class="recently-viewed__heading text-center mb-24">{{ section.settings.heading }}</h1>

  <div class="recently-viewed__products flex flex-wrap gap-x-8 gap-y-16 items-start justify-center" js-product-cards>
  </div>
</recently-viewed>
    
{% schema %}
{
  "name": "PDP - Recently Viewed",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Recently Viewed"
    }
  ],
  "presets": [
    {
      "name": "PDP - Recently Viewed"
    }
  ]
}
{% endschema %}