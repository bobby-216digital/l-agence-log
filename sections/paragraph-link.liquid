{%- liquid 
  assign heading_text = section.settings.heading_text
  assign description  = section.settings.description
  assign cta_text = section.settings.cta_text
  assign cta_url = section.settings.cta_url
-%}

<section class="text-link max-w-screen-laptop mx-auto text-center">
  {%- if heading_text != blank -%}
    <h2 class="pt-32 text-[32px] desktop:text-40 leading-normal text-center">{{ heading_text }}</h2>
  {%- endif -%}

  {%- if description != blank -%}
    <p class="text-16 desktop:text-20 p-32 desktop:px-40 leading-normal text-center">{{ description }}</p>
  {%- endif -%}

  {%- if cta_text != blank and cta_url != blank -%}
    <a href="{{ cta_url }}" class="btn text-13 px-20 py-12 mb-32 inline-block uppercase mx-auto">{{ cta_text }}</a>
  {%- endif -%}
</section>

{% schema %}
  {
    "name": "Text Link",
    "tag": "section",
    "settings": [
      {
        "type": "text",
        "id": "heading_text",
        "label": "Heading Text",
        "default": "Lorem"
      },
      {
        "type": "textarea",
        "id": "description",
        "label": "Description",
        "default": "Lorem"
      },
      {
        "type": "text",
        "id": "cta_text",
        "label": "CTA Text",
        "default": "Lorem"
      },
      {
        "type": "url",
        "id": "cta_url",
        "label": "CTA Url"
      }
    ],
    "presets": [
      {
        "name": "Text Link"
      }
    ]
  }
{% endschema %}
