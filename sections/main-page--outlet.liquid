{% layout 'theme.outlet' %}
<div class="page max-w-[712px] mx-auto px-16">
    {% if section.settings.show_title %}
      <h1 class="page__title py-40 desktop:pt-80 text-center">
        {{ page.title | escape }}
      </h1>
    {% endif %}
  
    <div class="rte text-[18px] leading-normal">
      {{ page.content }}
    </div>
  </div>
  
  {% schema %}
  {
    "name": "Outlet Page",
    "tag": "section",
    "settings": [
      {
        "type": "checkbox",
        "id": "show_title",
        "label": "Show Title",
        "default": false
      }
    ]  
  }
  {% endschema %}
  