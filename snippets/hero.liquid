{%- capture src -%}{{video_desktop}}?background=1&title=0&byline=0&portrait=0&autoplay=1&loop=1&muted=1&controls=0{%- endcapture -%}
{%- capture src_mobile -%}{{video_mobile}}?background=1&title=0&byline=0&portrait=0&autoplay=1&loop=1&muted=1&controls=0{%- endcapture -%}

{% if cta_url != blank %}
<a href="{{cta_url}}" class="hero block relative">
{% else %}
  <div class="hero block relative">
{% endif %}
    {% if use_video %}
      <div class="hero-video hidden desktop:block" style="aspect-ratio: {{ar_desktop}};position:relative;">
        <iframe 
          src="{{src}}" 
          style="position:absolute;top:0;left:0;width:100%;height:100%;" 
          frameborder="0" 
          webkitallowfullscreen 
          mozallowfullscreen 
          allowfullscreen
        ></iframe>
      </div>
      <div class="hero-video__mobile desktop:hidden" style="aspect-ratio: {{ar_mobile}};position:relative;">
        <iframe 
          src="{{src_mobile}}" 
          style="position:absolute;top:0;left:0;width:100%;height:100%;" 
          frameborder="0" 
          webkitallowfullscreen 
          mozallowfullscreen 
          allowfullscreen
        ></iframe>
      </div>
    {% else %}
      {% render 'lazy-image', type: object, image: image_mobile, image_desktop: image_desktop %}
    {% endif %}

    {% if title != blank or text != blank or cta_text != blank %}
      <div class="hero__content-wrapper flex flex-col w-full p-40 {{mobile_text_alignment}} {{text_alignment}}">
        <div class="hero__content">
          {% if title != blank %}
            <h1 class="hero__title mb-16" style="color: {{title_color}};">{{title}}</h1>
          {% endif %}

          {% if text != blank %}
            <p class="hero__subtitle mb-16" style="color: {{text_color}};">{{text}}</p>
          {% endif %}

          {% if cta_text != blank %}
            <button class="hero__btn btn {{cta_style}}">{{cta_text}}</button>
          {% else %}
          {% endif %}
        </div>
      </div>
    {% endif %}
{% if cta_url != blank %}
</a>
{% else %}
</div>
{% endif %}

